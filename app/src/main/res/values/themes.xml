<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ThirteenStones2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>

        <!-- For compatibility -->
        <item name="colorAccent">@color/secondaryColor</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondaryVariant</item>
        <item name="android:navigationBarColor" tools:targetApi="l">?attr/colorSecondaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ThirteenStones2.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ThirteenStones2.NoActionBar.Dialog" parent="Theme.MaterialComponents.DayNight.Dialog.MinWidth">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>

        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>

        <item name="colorAccent">@color/secondaryColor</item>

        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/secondaryDarkColor
        </item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/secondaryDarkColor
        </item>
    </style>


    <style name="Theme.ThirteenStones2.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ThirteenStones2.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.ThirteenStones2.NoActionBar.SplashScreenTheme">
        <item name="android:background">@drawable/splash_background</item>
    </style>

    <style name="Theme.ThirteenStones" parent="Theme.MaterialComponents.DayNight.DarkActionBar" />
</resources>